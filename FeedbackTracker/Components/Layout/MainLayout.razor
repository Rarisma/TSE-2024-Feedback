@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@using FeedbackTracker.Services
@inject AppTheme AppTheme
@implements IDisposable

<RadzenComponents @rendermode="InteractiveServer" />

<!-- Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&display=swap" rel="stylesheet">

<!-- Page Structure -->
<RadzenLayout class="@AppTheme.ColourTheme" Style="height: 100vh; overflow: hidden;">
    <RadzenSidebar class="@AppTheme.ColourTheme" Expanded="true" Style="width: 240px;">
        <NavMenu />
    </RadzenSidebar>
    
    <RadzenBody class="@AppTheme.ColourTheme" Style="padding: 10px;">
        <div class="app-container @AppTheme.ColourTheme" style="height: calc(100% - 0px); padding: 20px; border-radius: 10px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);">
            @Body
        </div>
    </RadzenBody>
    
<!-- About -->
<!-- condition -->
@if (NavigationManager.Uri.Contains("login") ||
       NavigationManager.Uri.Contains("SignUp") ||
       NavigationManager.Uri.Contains("contact") ||
       NavigationManager.Uri.Contains("about") ||
       NavigationManager.Uri.Contains("privacypolicy") ||
       NavigationManager.Uri.Contains("termsofservice"))
{
        <RadzenFooter class="@AppTheme.ColourTheme" Style="padding: 0 16px; height: 22px;">
            <div Style="display: flex; justify-content: flex-end; align-items: center; width: 100%; font-size: 0.75rem;">
                <NavLink href="/about" class="text-primary" Style="margin: 0 8px; text-decoration: none; font-size: 0.75rem;">About</NavLink>
                <NavLink href="/termsofservice" class="text-primary" Style="margin: 0 8px; text-decoration: none; font-size: 0.75rem;">Terms of Service</NavLink>
                <NavLink href="/privacypolicy" class="text-primary" Style="margin: 0 8px; text-decoration: none; font-size: 0.75rem;">Privacy Policy</NavLink>
            </div>
        </RadzenFooter>
    }      
</RadzenLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@* COLOUR CHANGER *@

@code {

    //run on first render
    protected override void OnInitialized()
    {
        //detect url changes
        NavigationManager.LocationChanged += HandleLocationChanged;
        //apply the theme changes
        AppTheme.OnChange += StateHasChanged;
        base.OnInitialized();
    }

    //event handler for url changes
    private void HandleLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        StateHasChanged();
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("ThemeHelpers.applyTheme", AppTheme.ColourTheme);

            //apply the class to the page content
            await JSRuntime.InvokeVoidAsync("eval", $@"document.body.classList.add('{AppTheme.ColourTheme}');");
        }
    }

    //avoid memory leaks
    public void Dispose()
    {
        NavigationManager.LocationChanged -= HandleLocationChanged;
        AppTheme.OnChange -= StateHasChanged;
    }
}
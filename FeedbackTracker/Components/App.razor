@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <RadzenTheme Theme="material" @rendermode="InteractiveServer" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="_content/Radzen.Blazor/Radzen.Blazor.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="/Application.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <link rel="stylesheet" href="Application.styles.css" />
	<link rel="icon" type="image/png" href="favicon.png" />    
    <!-- Bootstrap Icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <HeadOutlet />
</head>

<body>
    <Routes />
    <script src="/_framework/blazor.web.js"></script>
    <script src="JS/colour_changer.js"></script>
    <audio id="effectplayer">
        <source id="effectplayerSource" src="" />
    </audio>
    <script src="scripts/sound.js"></script>
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js?v=@(typeof(Radzen.Colors).Assembly.GetName().Version)"></script>
</body>
</html>

@code{
    public static string Endpoint = "http://localhost:5189";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            //retrieve the theme from localstorage, or default to blue
            string savedTheme = await JSRuntime.InvokeAsync<string?>("localStorage.getItem", "selectedTheme") ?? "blue"; 
            
            //run changeTheme and apply the saved theme
            await JSRuntime.InvokeVoidAsync("changeTheme", savedTheme); 
            StateHasChanged();
        }
    }
}